
@using Resgrid.Web.Helpers
@model Resgrid.Web.Areas.User.Models.Connect.MessagesView
@{
	ViewBag.Title = "Resgrid | Connect Messages";
	Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div id="content-header">
	<h1>Connect Messages</h1>
</div>
<div id="breadcrumb">
	<a href="@Url.Action("Dashboard", "Home", new {Area = "User"})" title="Go to Home" class="tip-bottom"><i class="icon-home"></i>Home</a>
	<a href="@Url.Action("Index", "Connect", new { Area = "User" })" title="Go to Home" class="tip-bottom"><i class="icon-comment"></i>Connect</a>
	<a href="#" class="current">Connect Messages</a>
</div>

<div class="row">
	<div class="col-xs-12">
		<div class="widget-box widget-messages">
			<div class="widget-title">
				<span class="icon">
					<i class="icon-envelope-alt"></i>
				</span>
				<h5>Messages</h5>
				<div class="buttons-actions">
					<a id="addPersonButton" title="Add a single person" class="btn btn-success" href="@Url.Action("AddPost", "Connect", new {area = "User"})"><i class="icon-plus"></i> New Message</a>
				</div>
				<ul class="nav nav-tabs pull-right">
					<li class="active"><a href="#inbox-tab" data-toggle="tab"><i class="icon-inbox"></i><span class="text"> Inbox</span></a></li>
					@*<li><a href="#sent-tab" data-toggle="tab"><i class="icon-location-arrow"></i><span class="text"> Sent</span></a></li>
					<li><a href="#settings" data-toggle="tab"><i class="icon-trash"></i><span class="text"> Trash</span></a></li>*@
				</ul>
			</div>
			<div class="widget-content nopadding">
				<div class="tab-content">
					<div id="inbox-tab" class="tab-pane active checklist">
						<ul class="messages-list">
							@if (Model.Messages.Any())
							{
								foreach (var message in Model.Messages)
								{
									<li class="messages-item">
