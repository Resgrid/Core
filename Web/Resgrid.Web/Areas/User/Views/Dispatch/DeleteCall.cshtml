@inject IStringLocalizer<Resgrid.Localization.Areas.User.Dispatch.Call> localizer
@model Resgrid.Web.Areas.User.Models.Calls.DeleteCallView
@{
    ViewBag.Title = "Resgrid | " + @localizer["DeleteCallHeader"];
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}
@section Styles
{

}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@localizer["DeleteCallHeader"]</h2>
        <ol class="breadcrumb">
            <li>
                <a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">@commonLocalizer["HomeModule"]</a>
            </li>
            <li>
                <a asp-controller="Dispatch" asp-action="Dashboard" asp-route-area="User">@commonLocalizer["CallsModule"]</a>
            </li>
            <li class="active">
                <strong>@localizer["DeleteCallHeader"]</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="wrapper wrapper-content">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form class="form-horizontal" role="form" id="deleteCallForm" asp-controller="Dispatch" asp-action="DeleteCall" asp-route-area="User" method="post">

                        <div class="row">
                            <div class="col-md-8 col-md-offset-1">
                                @Html.HiddenFor(m => m.CallId)
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">@localizer["DeleteReasonLabel"]</label>
                            <div class="col-sm-10">
                                <input type="hidden" asp-for="DeleteCallNotes">

                                <div id="editor-container" style="width:100%; height: 200px;">
                                   @Html.Raw(Model.DeleteCallNotes)
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white" asp-controller="Dispatch" asp-action="Dashboard" asp-route-area="User">@commonLocalizer["Cancel"]</a>
                                <button class="btn btn-primary" type="submit">@localizer["DeleteCall"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/app/internal/dispatch/resgrid.dispatch.deletecall.js" type="text/javascript"></script>
}
