@using Resgrid.Model
@model Resgrid.WebCore.Areas.User.Models.Forms.ViewFormModel
@{
  ViewBag.Title = "Resgrid | View Form";
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>View Form</h2>
    <ol class="breadcrumb">
      <li>
        <a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">Home</a>
      </li>
      <li>
        <a asp-controller="Forms" asp-action="Index" asp-route-area="User">Forms</a>
      </li>
      <li class="active">
        <strong>View Form</strong>
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="wrapper wrapper-content">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
		  <div class="form-horizontal">
		    <div class="form-group">
		      <label class="col-sm-2 control-label required">
		        Form Name
		      </label>
		      <div class="col-sm-6">
		        @Model.Form.Name
		      </div>
		    </div>
		    <div class="form-group">
		      <label class="col-sm-2 control-label required">
		        Form Type
		      </label>
		      <div class="col-sm-3">
		        @if (Model.Form.Type == 0)
				{
		          <span>New Call Form</span>
				}
		      </div>
		    </div>
		    <div class="form-group">
		      <label class="col-sm-2 control-label required">
		        Form
		      </label>
		      <div class="col-sm-9">
		        <div id="fb-template"></div>
		      </div>
		    </div>
		  </div>
        </div>
      </div>
    </div>
  </div>
</div>


@section Scripts
{
  <script src="@Url.Content("~/lib/formBuilder/dist/form-render.min.js")" type="text/javascript"></script>
  <script>
	jQuery(function ($) {
	  $('#fb-template').formRender({
        dataType: 'json',
		formData: '@Html.Raw(Model.Form.Data)'
	  });
	});
  </script>
}
