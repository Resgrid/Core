@model Resgrid.WebCore.Areas.User.Models.Links.NewLinksView
@{
  ViewBag.Title = "Resgrid | Enable Department Link";
}

@section Styles
{
  <style>
	.k-select {
	  line-height: 1.5em !important;
	}
  </style>
}

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Enable Department Link</h2>
    <ol class="breadcrumb">
      <li>
        <a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">Home</a>
      </li>
      <li>
        <a asp-controller="Links" asp-action="Index" asp-route-area="User">Department Links</a>
      </li>
      <li class="active">
        <strong>Enable Department Link</strong>
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="wrapper wrapper-content">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <form class="form-horizontal" role="form" asp-controller="Links" asp-action="Enable" asp-route-area="User" method="post">

            <div class="row">
              <div class="col-md-8 col-md-offset-1">
                <div class="alert alert-warning">
                  Department Links are sharing data in one direction. Below is where you can enable a link and set it's link color. The link color will be used to color calls, personnel and units that will identify them as originating from this link.
                </div>
                @if (!String.IsNullOrEmpty(Model.Message))
				{
                  <div class="alert alert-danger">
                    @Model.Message
                  </div>
				}
				@Html.HiddenFor(m => m.Link.DepartmentLinkId)
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">Link Color</label>
              <div class="col-sm-10"><input type="text" class="form-control" asp-for="Link.DepartmentColor" /></div>
            </div>

            <div class="form-group">
              <div class="col-sm-4 col-sm-offset-2">
                <a class="btn btn-white" asp-controller="Links" asp-action="Index" asp-route-area="User">Cancel</a>
                <button class="btn btn-primary" type="submit">Save and Enable Link</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts
{
  <script>
	$(document).ready(function () {
            $("#Link_DepartmentColor").minicolors({
                animationSpeed: 50,
                animationEasing: 'swing',
                changeDelay: 0,
                control: 'hue',
                defaultValue: '#0080ff',
                format: 'hex',
                showSpeed: 100,
                hideSpeed: 100,
                inline: false,
                theme: 'bootstrap'
            });
	});
  </script>
}
