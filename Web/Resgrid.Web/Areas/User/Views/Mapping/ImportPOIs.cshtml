
@model Resgrid.Web.Areas.User.Models.Mapping.ImportPOIsView
@{
	ViewBag.Title = "Resgrid | Import POIs";
}

@section Styles
{

}

<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-4">
		<h2> Import POIs</h2>
		<ol class="breadcrumb">
			<li>
				<a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">Home</a>
			</li>
			<li>
				<a asp-controller="Mapping" asp-action="Index" asp-route-area="User">Mapping</a>
			</li>
			<li class="active">
				<strong> Import POIs</strong>
			</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
		<div class="wrapper wrapper-content">
			<div class="ibox float-e-margins">
				<div class="ibox-content">
					<form class="form-horizontal" role="form" asp-controller="Mapping" asp-action="ImportPOIs" asp-route-area="User" method="post">

						<div class="row">
							<div class="col-md-8 col-md-offset-1">
								@if (!String.IsNullOrEmpty(Model.Message))
								{
									<div class="alert alert-success">
										@Model.Message
									</div>
								}
								<div asp-validation-summary="All" class="text-danger"></div>
								@Html.AntiForgeryToken()
								@Html.HiddenFor(m => m.TypeId)
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-2 control-label">
								Upload
							</label>
							<div class="col-sm-10">
								<input name="fileToUpload" id="fileToUpload" type="file" />
							</div>
						</div>

						<div class="form-group">
							<div class="col-sm-4 col-sm-offset-2">
								<a class="btn btn-white" asp-controller="Mapping" asp-action="POIs" asp-route-area="User">Cancel</a>
								<button class="btn btn-primary" type="submit">Import POIs</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts
{
	<script src="~/js/app/internal/mapping/resgrid.mapping.importPois.js" type="text/javascript"></script>
}