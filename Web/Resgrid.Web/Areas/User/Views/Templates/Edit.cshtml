@using Resgrid.Model
@model Resgrid.WebCore.Areas.User.Models.Templates.NewTemplateModel
@inject IStringLocalizer<Resgrid.Localization.Areas.User.Templates.Templates> localizer
@{
    ViewBag.Title = "Resgrid | " + @localizer["EditTemplateHeader"];
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@localizer["EditTemplateHeader"]</h2>
        <ol class="breadcrumb">
            <li>
                <a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">@commonLocalizer["Home"]</a>
            </li>
            <li>
                <a asp-controller="Templates" asp-action="Index" asp-route-area="User">@commonLocalizer["Templates"]</a>
            </li>
            <li class="active">
                <strong>@localizer["EditTemplateHeader"]</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="wrapper wrapper-content">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form id="newTemplateForm" class="form-horizontal" role="form" asp-controller="Templates" asp-action="New" asp-route-area="User" method="post">

                        <div class="row">
                            <div class="col-md-8 col-md-offset-1">
                                @if (!String.IsNullOrEmpty(Model.Message))
                                {
                                    <div class="alert alert-success">
                                        @Model.Message
                                    </div>
                                }
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.Template.CallQuickTemplateId)
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label required">
                                @localizer["TemplateNameLabel"]
                            </label>
                            <div class="col-sm-10">
                                <div class="col-md-5">
                                    @Html.TextBoxFor(m => m.Template.Name, new { @class = "form-control", autofocus = "autofocus" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                @localizer["CallNameToSetLabel"]
                            </label>
                            <div class="col-sm-10">
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Template.CallName, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                @localizer["CallTypeToSetLabel"]
                            </label>
                            <div class="col-sm-10">
                                <div class="col-md-10">
                                    @Html.DropDownListFor(m => m.Template.CallType, Model.CallTypes, new { @style = "width: 120px;" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                @localizer["CallPriorityToSetLabel"]
                            </label>
                            <div class="col-sm-10">
                                <div class="col-md-10">
                                    @Html.DropDownListFor(m => m.Template.CallPriority, Model.CallPriorities, new { @style = "width: 120px;" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">
                                @localizer["CallNatureToSetLabel"]
                            </label>
                            <div class="col-sm-8">
                                <div class="col-md-8">
                                    <textarea cols="15" rows="5" class="form-control" asp-for="Template.CallNature"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white" asp-controller="Templates" asp-action="Index" asp-route-area="User">@commonLocalizer["Cancel"]</a>
                                <button class="btn btn-primary" type="submit">@localizer["EditTemplateHeader"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="~/js/app/internal/templates/resgrid.templates.newtemplate.js"></script>
}
