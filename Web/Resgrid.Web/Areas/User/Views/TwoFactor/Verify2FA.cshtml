@model Resgrid.Web.Areas.User.Models.TwoFactor.StepUpVerifyViewModel
@inject IStringLocalizer<Resgrid.Localization.Areas.User.TwoFactor.TwoFactor> localizer
@{
    ViewBag.Title = "Resgrid | " + localizer["VerifyPageTitle"];
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@localizer["VerifyIdentityHeader"]</h2>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">@commonLocalizer["HomeModule"]</a></li>
            <li class="active"><strong>@localizer["VerifyPageTitle"]</strong></li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-md-6">
        <div class="wrapper wrapper-content">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="alert alert-info">
                        <i class="fa fa-shield"></i>
                        @localizer["VerifyIdentityDescription"]
                    </div>

                    <form asp-action="Verify2FA" method="post" class="form-horizontal">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Code" class="col-sm-3 control-label">@localizer["AuthenticatorCodeLabel"]</label>
                            <div class="col-sm-4">
                                <input asp-for="Code" class="form-control" autocomplete="one-time-code"
                                       inputmode="numeric" maxlength="7" placeholder="@localizer["VerificationCodePlaceholder"]"
                                       autofocus />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-primary">@localizer["VerifyButton"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
