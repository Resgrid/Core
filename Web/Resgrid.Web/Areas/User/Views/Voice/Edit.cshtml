@using Resgrid.Model
@model Resgrid.WebCore.Areas.User.Models.Voice.NewChannelModel
@{
    ViewBag.Title = "Resgrid | Edit Push-To-Talk Channel";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Edit Push-To-Talk Channel</h2>
        <ol class="breadcrumb">
            <li>
                <a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">Home</a>
            </li>
            <li>
                <a asp-controller="Forms" asp-action="Index" asp-route-area="User">Push-To-Talk</a>
            </li>
            <li class="active">
                <strong>Edit Push-To-Talk Channel</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="wrapper wrapper-content">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form id="newFormForm" class="form-horizontal" role="form" asp-controller="Voice" asp-action="Edit" asp-route-area="User" method="post">

                        <div class="row">
                            <div class="col-md-8 col-md-offset-1">
                                @if (!String.IsNullOrEmpty(Model.Message))
                                {
                                    <div class="alert alert-success">
                                        @Model.Message
                                    </div>
                                }
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.Id)
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>

                         <div class="form-group">
                            <label class="col-sm-2 control-label required">Channel Name</label>
                            <div class="col-sm-10">
                                <div class="col-md-5">
                                    <input type="text" class="form-control" asp-for="ChannelName" autofocus="autofocus">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Is Default</label>
                            <div class="col-sm-10">
                                <div class="col-md-5">
                                    <input type="checkbox" asp-for="IsDefault">
                                    <span class="help-block m-b-none">Note there can be only one default channel at a time, selecting a new default channel will turn off default for the existing one.</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white" asp-controller="Voice" asp-action="Index" asp-route-area="User">Cancel</a>
                                <button class="btn btn-primary" type="submit">Save PTT Channel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
    {

}
