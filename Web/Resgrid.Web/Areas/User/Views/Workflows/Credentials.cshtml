@model List<Resgrid.Model.WorkflowCredential>
@inject IStringLocalizer<Resgrid.Localization.Areas.User.Workflows.Workflows> localizer
@{
    ViewData["Title"] = "Resgrid | " + localizer["WorkflowCredentialsHeader"];
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-6">
        <h2>@localizer["WorkflowCredentialsHeader"]</h2>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">@commonLocalizer["HomeModule"]</a></li>
            <li><a asp-action="Index">@localizer["WorkflowsHeader"]</a></li>
            <li class="active"><strong>@localizer["Credentials"]</strong></li>
        </ol>
    </div>
    <div class="col-sm-6">
        <div class="title-action">
            <a asp-action="CredentialNew" class="btn btn-primary"><i class="fa fa-plus"></i> @localizer["AddCredential"]</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title"><h5>@localizer["StoredCredentials"]</h5></div>
                <div class="ibox-content">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info">@localizer["NoCredentialsConfigured"]</div>
                    }
                    else
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>@localizer["Name"]</th>
                                    <th>@localizer["Type"]</th>
                                    <th>@localizer["Created"]</th>
                                    <th>@localizer["SecretData"]</th>
                                    <th>@localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cred in Model)
                                {
                                    <tr>
                                        <td><strong>@cred.Name</strong></td>
                                        <td><span class="badge badge-default">@((Resgrid.Model.WorkflowCredentialType)cred.CredentialType)</span></td>
                                        <td>@cred.CreatedOn.ToString("yyyy-MM-dd")</td>
                                        <td><em class="text-muted">••••••••</em></td>
                                        <td>
                                            <a asp-action="CredentialEdit" asp-route-credentialId="@cred.WorkflowCredentialId"
                                               class="btn btn-xs btn-primary"><i class="fa fa-pencil"></i> @localizer["Edit"]</a>
                                            <form asp-action="DeleteCredential" method="post" style="display:inline;"
                                                  onsubmit="return confirm('@Html.Raw(string.Format(localizer["DeleteCredentialConfirm"].Value, cred.Name))');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="credentialId" value="@cred.WorkflowCredentialId" />
                                                <button type="submit" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i> @localizer["Delete"]</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
