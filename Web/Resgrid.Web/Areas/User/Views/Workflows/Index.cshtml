@model List<Resgrid.Model.Workflow>
@inject IStringLocalizer<Resgrid.Localization.Areas.User.Workflows.Workflows> localizer
@{
    ViewData["Title"] = "Resgrid | " + localizer["WorkflowsHeader"];
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

@section Styles {
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@localizer["WorkflowsHeader"]</h2>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">@commonLocalizer["HomeModule"]</a></li>
            <li class="active"><strong>@localizer["WorkflowsHeader"]</strong></li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a asp-action="New" class="btn btn-primary">
                <i class="fa fa-plus"></i> @localizer["NewWorkflow"]
            </a>
            <a asp-action="Credentials" class="btn btn-default">
                <i class="fa fa-key"></i> @localizer["Credentials"]
            </a>
            <a asp-action="Pending" class="btn btn-default">
                <i class="fa fa-clock-o"></i> @localizer["PendingRuns"]
            </a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@localizer["DepartmentWorkflows"]</h5>
                </div>
                <div class="ibox-content">
                    @if (Model == null || !Model.Any())
                    {
                        <div class="alert alert-info">
                            @localizer["NoWorkflowsCreated"] <a asp-action="New">@localizer["CreateFirstWorkflow"]</a>
                        </div>
                    }
                    else
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>@localizer["Name"]</th>
                                    <th>@localizer["TriggerEvent"]</th>
                                    <th>@localizer["Status"]</th>
                                    <th>@localizer["Created"]</th>
                                    <th>@localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var wf in Model)
                                {
                                    <tr>
                                        <td>
                                            <strong>@wf.Name</strong>
                                            @if (!string.IsNullOrWhiteSpace(wf.Description))
                                            {
                                                <br /><small class="text-muted">@wf.Description</small>
                                            }
                                        </td>
                                        <td><span class="badge badge-default">@((Resgrid.Model.WorkflowTriggerEventType)wf.TriggerEventType)</span></td>
                                        <td>
                                            @if (wf.IsEnabled)
                                            {
                                                <span class="badge badge-success">@localizer["Enabled"]</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">@localizer["Disabled"]</span>
                                            }
                                        </td>
                                        <td>@wf.CreatedOn.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-workflowId="@wf.WorkflowId" class="btn btn-xs btn-primary"><i class="fa fa-pencil"></i> @localizer["Edit"]</a>
                                            <a asp-action="Runs" asp-route-workflowId="@wf.WorkflowId" class="btn btn-xs btn-default"><i class="fa fa-list"></i> @localizer["Runs"]</a>
                                            <a asp-action="Health" asp-route-workflowId="@wf.WorkflowId" class="btn btn-xs btn-info"><i class="fa fa-heartbeat"></i> @localizer["Health"]</a>
                                            @{ var deleteConfirmMsg = System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(string.Format(localizer["DeleteWorkflowConfirm"].Value, wf.Name)); }
                                            <form asp-action="Delete" method="post" style="display:inline;"
                                                  onsubmit="return confirm('@Html.Raw(deleteConfirmMsg)');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="workflowId" value="@wf.WorkflowId" />
                                                <button type="submit" class="btn btn-xs btn-danger"><i class="fa fa-trash"></i> @localizer["Delete"]</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

