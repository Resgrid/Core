@model Resgrid.Web.Models.WorkflowCredentialViewModel
@inject IStringLocalizer<Resgrid.Localization.Areas.User.Workflows.Workflows> localizer

@* ── SMTP (0) ────────────────────────────────────────────────────────────── *@
<div class="cred-panel" id="cred-panel-0">
    <hr />
    <h5 class="text-muted">@localizer["SmtpSettings"]</h5>
    <div class="row">
        <div class="col-sm-8 form-group">
            <label asp-for="SmtpHost">@localizer["SmtpHost"] <span class="text-danger">*</span></label>
            <input asp-for="SmtpHost" class="form-control" placeholder="smtp.example.com" />
            <span asp-validation-for="SmtpHost" class="text-danger"></span>
        </div>
        <div class="col-sm-4 form-group">
            <label asp-for="SmtpPort">@localizer["SmtpPort"]</label>
            <input asp-for="SmtpPort" class="form-control" type="number" placeholder="587" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SmtpFromAddress">@localizer["SmtpFromAddress"] <span class="text-danger">*</span></label>
        <input asp-for="SmtpFromAddress" class="form-control" type="email" placeholder="noreply@example.com" />
        <span asp-validation-for="SmtpFromAddress" class="text-danger"></span>
        <small class="text-muted">@localizer["SmtpFromAddressHelp"]</small>
    </div>
    <div class="row">
        <div class="col-sm-6 form-group">
            <label asp-for="SmtpUsername">@localizer["SmtpUsername"]</label>
            <input asp-for="SmtpUsername" class="form-control" placeholder="user@example.com" autocomplete="off" />
        </div>
        <div class="col-sm-6 form-group">
            <label asp-for="SmtpPassword">@localizer["SmtpPassword"] <span class="text-danger">*</span></label>
            <input asp-for="SmtpPassword" class="form-control" type="password" placeholder="••••••••" autocomplete="new-password" />
            <span asp-validation-for="SmtpPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="SmtpUseSsl" type="checkbox" /> @localizer["SmtpUseSsl"]
            </label>
        </div>
    </div>
</div>

