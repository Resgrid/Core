@using Resgrid.Web.Helpers
@model Resgrid.Web.Areas.User.Models.Documents.NewDocumentView
@{
    ViewBag.Title = "Resgrid | New Document";
}

@section Styles
{

}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>New Document</h2>
        <ol class="breadcrumb">
            <li>
                <a asp-controller="Home" asp-action="Dashboard" asp-route-area="User">Home</a>
            </li>
            <li>
                <a asp-controller="Documents" asp-action="Index" asp-route-area="User">Documents</a>
            </li>
            <li class="active">
                <strong>New Document</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="wrapper wrapper-content">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <form class="form-horizontal" id="newDocumentForm" role="form" asp-controller="Documents" asp-action="NewDocument" asp-route-area="User" method="post">

                        <div class="row">
                            <div class="col-md-8 col-md-offset-1">
                                @if (!String.IsNullOrEmpty(Model.Message))
                                {
                                    <div class="alert alert-success">
                                        @Model.Message
                                    </div>
                                }

                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-10"><input type="text" class="form-control" placeholder="Name of the Document" asp-for="Name"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Description</label>
                            <div class="col-sm-10">
                                <input type="hidden" asp-for="Description">

                                <div id="editor-container" style="width:100%; height: 200px;">
                                    <p>@Model.Description</p>
                                </div>
                            </div>
                        </div>
                        @if (ClaimsAuthorizationHelper.IsUserDepartmentAdmin())
                        {
                            <div class="form-group">
                                <label class="col-sm-2 control-label required">
                                    Viewable By
                                </label>
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(x => x.AdminOnly, new[]
                                             {
                                new SelectListItem {Selected = true, Text = "Everyone", Value = Boolean.FalseString},
                                new SelectListItem {Selected = false, Text = "Admins Only", Value = Boolean.TrueString}
                                })
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <label class="col-sm-2 control-label required">
                                Upload
                            </label>
                            <div class="col-sm-10">
                                <input name="fileToUpload" id="fileToUpload" type="file" />
                                <div class="alert alert-info" role="alert">Not all files types are allowed! File must be less then 10MB in size and must have one of these extensions (.png, .jpg, .jpeg, .gif, .pdf, .doc, .docx, .txt, .ppt, .pptx, .pps, .ppsx, .odt, .xls, .xlsx, .mp4, .mp3)</div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a class="btn btn-white" asp-controller="Documents" asp-action="Index" asp-route-area="User">Cancel</a>
                                <button class="btn btn-primary" type="submit">Add Document</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/app/internal/documents/resgrid.documents.newdocument.js" type="text/javascript"></script>
}
